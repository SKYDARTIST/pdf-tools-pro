{
    "headers": [
        {
            "source": "/(.*\\.env.*|\\.git/.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/(.*\\.env.*|\\.git/.*|wp-admin.*|phpmyadmin.*)",
            "status": 404
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}