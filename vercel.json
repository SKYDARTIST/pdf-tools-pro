{
    "headers": [
        {
            "source": "/(.*\\.env.*|\\.git/.*|wp-admin.*|phpmyadmin.*)",
            "headers": [
                {
                    "key": "X-Robots-Tag",
                    "value": "noindex"
                }
            ]
        }
    ],
    "redirects": [
        {
            "source": "/:path(.*\\.env.*)",
            "destination": "/404",
            "permanent": false
        },
        {
            "source": "/:path(\\.git/.*)",
            "destination": "/404",
            "permanent": false
        },
        {
            "source": "/wp-admin/:path*",
            "destination": "/404",
            "permanent": false
        },
        {
            "source": "/phpmyadmin/:path*",
            "destination": "/404",
            "permanent": false
        }
    ],
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}